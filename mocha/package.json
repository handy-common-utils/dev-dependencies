{
  "name": "@handy-common-utils/dev-dependencies-mocha",
  "version": "1.8.0",
  "description": "This package contains dependencies that are common, including mocha",
  "bin": {},
  "scripts": {
    "pretest": "eslint .",
    "test": "ESBK_TSCONFIG_PATH=test/tsconfig.json npx mocha --no-config --import=tsx test/*.spec.ts",
    "prepare": "shx cp ../LICENSE ../tsconfig.* ../eslint.config.* ../prettier.config.* ../.prettierignore ../.nycrc.* ../.mocharc.* . && replace-in-file .prettierignore 'mocha/test/' 'test/' && replace-in-file .prettierignore 'jest/test/.*?\\n' '' && replace-in-file eslint.config.cjs 'mocha/test/' 'test/'"
  },
  "files": [
    "tsconfig.*",
    "eslint.config.*",
    ".prettierignore",
    "prettier.config.*",
    ".nycrc.*",
    ".mocharc.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/handy-common-utils/dev-dependencies.git"
  },
  "keywords": [
    "handy-common-utils",
    "dev",
    "dependencies"
  ],
  "author": "James Hu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/handy-common-utils/dev-dependencies/issues"
  },
  "homepage": "https://github.com/handy-common-utils/dev-dependencies/tree/master/mocha#readme",
  "dependencies": {
    "@handy-common-utils/dev-dependencies-common": "1.8.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "eslint-plugin-chai-expect": "^3.1.0",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "mocha": "^11.7.1",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "zx": "^8.8.1"
  }
}
